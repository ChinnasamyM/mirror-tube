{
  "manifest_version": 2,

  "name": "MirrorTube",
  "description": "Mirrors YouTube videos",
  "version": "0.1",
  "author": "katashin",

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "https://*.youtube.com/",
    "declarativeContent",
    "activeTab"
  ],
  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "MirrorTube",
    "default_popup": "popup.html"
  }
}
